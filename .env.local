# Backend API URL
NEXT_PUBLIC_API_URL=https://potomac-analyst-workbench-production.up.railway.app

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-this-in-production

# Turbopack persistence configuration for Windows
TURBOPACK_BUILD_CACHE_DIR=.next/cache/turbopack
NEXT_CACHE_DIR=.next/cache
NODE_OPTIONS=--max-old-space-size=4096

# Disable problematic cache features on Windows
TURBOPACK_DISABLE_FILESYSTEM_CACHE=false
NEXT_BUILD_CACHE_ENABLED=true

# Optional: Add your API keys if needed for client-side
# NEXT_PUBLIC_CLAUDE_API_KEY=
# NEXT_PUBLIC_TAVILY_API_KEY=